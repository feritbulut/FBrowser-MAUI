<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FBrowser_Mobile.MainPage"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="10" Spacing="10">

        

        <WebView x:Name="webView"
                 HeightRequest="770"
                 WidthRequest="393"
                 Margin="0,-10,0,-10"/>

        <Border BackgroundColor="#22405C"
                WidthRequest="395"
                HeightRequest="70"
                StrokeShape="RoundRectangle 0,0,0,0"
                Padding="10"
                StrokeThickness="0"
                Margin="0,0,0,0">
            
            <HorizontalStackLayout Spacing="10"
                                   Margin="0,0,0,0"
                                   VerticalOptions="End"
                                   Padding="0">

                <Border HeightRequest="50"
                        StrokeShape="RoundRectangle 40,40,40,40"
                        StrokeThickness="0"
                        BackgroundColor="#16314E"
                        Padding="5">
                    
                <Entry x:Name="urlEntry"
                       Placeholder="Search..."
                       Keyboard="Url"
                       HorizontalOptions="Fill"
                       WidthRequest="200"
                       PlaceholderColor="#3E779B"/>
                    
                </Border>
                <ImageButton Source="search.png"
                             Clicked="OnGoClicked"
                             HeightRequest="24"
                             WidthRequest="24"
                             Aspect="AspectFit"/>

                <ImageButton Source="web_browser.png"
                             HeightRequest="24"
                             WidthRequest="24"
                             Clicked="OnTabsClicked"
                             Aspect="AspectFit"/>

                <ImageButton Source="more.png"
                             HeightRequest="24"
                             WidthRequest="24"
                             Clicked="OnButtonClicked"
                             Aspect="AspectFit"/>

            </HorizontalStackLayout>
            
        </Border>
        
    </VerticalStackLayout>
    
    
    

</ContentPage>
